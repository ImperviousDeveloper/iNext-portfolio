{
  "compilerOptions": {
    "target": "ES2017",
//    "lib": ["dom", "dom.iterable", "esnext"],
    "lib": [
      "dom",
      "esnext",
      "es5",
      "es6"
    ],
    "outDir": "./dist/",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
//    "module": "esnext",
    "module": "commonjs",
//    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
